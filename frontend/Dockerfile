FROM node:alpine as builder
WORKDIR /app
COPY ./package.json ./
RUN yarn
ARG REACT_APP_GOOGLEAUTH_APP_CLIENT_ID
ARG REACT_APP_GITHUB_APP_CLIENT_ID
ARG REACT_APP_OPENVIDU_SERVER_URL
ARG REACT_APP_OPENVIDU_SERVER_SECRET
ENV REACT_APP_GOOGLEAUTH_APP_CLIENT_ID $REACT_APP_GOOGLEAUTH_APP_CLIENT_ID
ENV REACT_APP_GITHUB_APP_CLIENT_ID $REACT_APP_GITHUB_APP_CLIENT_ID
ENV REACT_APP_OPENVIDU_SERVER_URL $REACT_APP_OPENVIDU_SERVER_URL
ENV REACT_APP_OPENVIDU_SERVER_SECRET $REACT_APP_OPENVIDU_SERVER_SECRET
COPY ./ ./
RUN yarn build

FROM nginx
EXPOSE 3000
COPY ./nginx/default.conf /etc/nginx/conf.d/default.conf
COPY --from=builder /app/build /usr/share/nginx/html
